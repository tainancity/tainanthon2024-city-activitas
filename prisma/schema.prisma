generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id         BigInt    @id @default(autoincrement())
  name       String?
  email      String    @unique
  created_at DateTime  @default(now()) @db.Timestamptz(6)
  updated_at DateTime? @default(now()) @db.Timestamptz(6)
}

model Authority {
  id         BigInt     @id @default(autoincrement())
  name       String
  created_at DateTime   @default(now()) @db.Timestamptz(6)
  updated_at DateTime?  @default(now()) @db.Timestamptz(6)
  IdleAsset  IdleAsset?
}

model District {
  id         BigInt     @id @default(autoincrement())
  name       String
  created_at DateTime   @default(now()) @db.Timestamptz(6)
  updated_at DateTime?  @default(now()) @db.Timestamptz(6)
  IdleAsset  IdleAsset?
}

model Location {
  id         BigInt     @id @default(autoincrement())
  name       String
  created_at DateTime   @default(now()) @db.Timestamptz(6)
  updated_at DateTime?  @default(now()) @db.Timestamptz(6)
  IdleAsset  IdleAsset?
}

model LandType {
  id         BigInt     @id @default(autoincrement())
  name       String
  created_at DateTime   @default(now()) @db.Timestamptz(6)
  updated_at DateTime?  @default(now()) @db.Timestamptz(6)
  IdleAsset  IdleAsset?
}

model HoldingType {
  id         BigInt     @id @default(autoincrement())
  name       String
  created_at DateTime   @default(now()) @db.Timestamptz(6)
  updated_at DateTime?  @default(now()) @db.Timestamptz(6)
  IdleAsset  IdleAsset?
}

model UserPartition {
  id         BigInt     @id @default(autoincrement())
  name       String
  created_at DateTime   @default(now()) @db.Timestamptz(6)
  updated_at DateTime?  @default(now()) @db.Timestamptz(6)
  IdleAsset  IdleAsset?
}

model LandUseType {
  id         BigInt     @id @default(autoincrement())
  name       String
  created_at DateTime   @default(now()) @db.Timestamptz(6)
  updated_at DateTime?  @default(now()) @db.Timestamptz(6)
  IdleAsset  IdleAsset?
}

enum Status {
  IDLE
  PARTIAL_IDLE
}

model IdleAsset {
  id               BigInt        @id @default(autoincrement())
  serial_number    String
  name             String?
  authority        Authority     @relation(fields: [authority_id], references: [id])
  authority_id     BigInt        @unique
  district         District      @relation(fields: [district_id], references: [id])
  district_id      BigInt        @unique
  location         Location      @relation(fields: [location_id], references: [id])
  location_id      BigInt        @unique
  location_number  String
  land_type        LandType      @relation(fields: [land_type_id], references: [id])
  land_type_id     BigInt        @unique
  area             Decimal       @default(0)
  holding_type     HoldingType   @relation(fields: [holding_type_id], references: [id])
  holding_type_id  BigInt        @unique
  use_partition    UserPartition @relation(fields: [use_partition_id], references: [id])
  use_partition_id BigInt        @unique
  land_use_type    LandUseType   @relation(fields: [land_use_type_id], references: [id])
  land_use_type_id BigInt        @unique
  status           Status
  vacancy_rate     Decimal
  remark           String?
  created_at       DateTime      @default(now()) @db.Timestamptz(6)
  updated_at       DateTime?     @default(now()) @db.Timestamptz(6)
}
